{
  "name": "@bgpat/webext-webpack-plugin",
  "version": "0.1.9",
  "description": "Webpack plugin for web-ext",
  "main": "dist/webext-webpack-plugin",
  "scripts": {
    "start": "npm run build -- -w",
    "build": "cross-env NODE_ENV=production babel src -d dist --ignore 'src/**/*.test.js' --copy-files",
    "clean": "del-cli dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bgpat/webext-webpack-plugin.git"
  },
  "keywords": [
    "web-ext",
    "webpack"
  ],
  "author": "bgpat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bgpat/webext-webpack-plugin/issues"
  },
  "homepage": "https://github.com/bgpat/webext-webpack-plugin#readme",
  "peerDependencies": {
    "webpack": "^4.3.0 || ^5.0.0"
  },
  "dependencies": {
    "web-ext": "^7.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.23.0",
    "@babel/core": "7.23.0",
    "@babel/plugin-proposal-object-rest-spread": "7.20.7",
    "@babel/polyfill": "7.12.1",
    "@babel/preset-env": "7.23.2",
    "cross-env": "7.0.3",
    "del": "7.1.0",
    "del-cli": "5.1.0",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "prettier": "3.0.3",
    "webpack": "5.88.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
