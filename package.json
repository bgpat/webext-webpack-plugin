{
  "name": "@bgpat/webext-webpack-plugin",
  "version": "0.1.2",
  "description": "Webpack plugin for web-ext",
  "main": "dist/webext-webpack-plugin",
  "scripts": {
    "start": "npm run build -- -w",
    "build": "cross-env NODE_ENV=production babel src -d dist --ignore 'src/**/*.test.js' --copy-files",
    "clean": "del-cli dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bgpat/webext-webpack-plugin.git"
  },
  "keywords": [
    "web-ext",
    "webpack"
  ],
  "author": "bgpat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bgpat/webext-webpack-plugin/issues"
  },
  "homepage": "https://github.com/bgpat/webext-webpack-plugin#readme",
  "peerDependencies": {
    "webpack": "^4.3.0"
  },
  "dependencies": {
    "web-ext": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/polyfill": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "cross-env": "^6.0.0",
    "del": "^5.1.0",
    "del-cli": "^3.0.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "prettier": "^1.16.4",
    "webpack": "^4.29.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
